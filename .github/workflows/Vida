using System;

class Vida
{
    public int vida;
    public int maximo = 100;

    public Vida(int v) //Corregi el nombre de vida para que no diera error a la hora de validar la vida inicial
    {
        Vida =Math.Clamp(v, o, maximo); //Aseguramos de que la vida inicial este en el rango que establecimos 
    }

    public void TomarDaño(int daño)
    {
        vida = Math.Max(vida - daño, 0); //Evitamos que la vida salga negativa
        console.writeLine("Te hicieron daño. La vida restante es: " + vida);
    }

    public void Curaar(int cantidad)
    {
        vida = Math.min(vida + cantidad, maximo); // No permite que la vida supere el maximo
        console.writeLine ("Te curaste. La vida actual es: " + vida);
    }
}

class Program
{
    static void Main()
    {
        Vida jugador = new Vida(120); // Se ajusta automaticamente a 100

        jugador.TomarDaño(50);
        jugador.Curar(20);
        jugador.Tomardaño(120);

        Console.WriteLine("Game Over");
    }
}